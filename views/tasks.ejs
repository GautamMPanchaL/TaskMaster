<%- include("partials/header") -%>

<h3>This is Task  <%= mailid %>
</h3>
<a href="/<%= mailid %>/addtask">Add new Task</a>
<h1>Tasks</h1>
<ul>
    <% tasks.forEach(function(task) { %>
        <li>
            <%= task.name %> - Deadline: <%= task.deadline %>
            <div class="countdown-timer" data-deadline="<%= task.deadline %>"></div>
                    <form action="/<%= mailid %>/tasks/<%= task._id %>" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                    <form action="/<%= mailid %>/tasks/<%= task._id %>/edit" method="GET">
                        <button type="submit">Edit</button>
                    </form>
        </li>
        <% }); %>
</ul>

<a class="" href="/logout" role="button">Log Out</a>
<%- include("partials/footer") -%>